{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react-native",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@navigation/*": ["navigation/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["./src", "App.tsx"],
  "exclude": ["node_modules"]
}

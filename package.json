{
  "name": "fermer-market-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "npm run install:backend && npm run install:bot && npm run install:miniapp",
    "install:backend": "npm install --prefix backend",
    "install:bot": "npm install --prefix bot",
    "install:miniapp": "npm install --prefix miniapp",
    "dev:backend": "npm run dev --prefix backend",
    "dev:bot": "npm run dev --prefix bot",
    "dev:miniapp": "npm run dev --prefix miniapp",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:bot\"",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:bot\" \"npm run dev:miniapp\"",
    "start:backend": "npm run start --prefix backend",
    "start:bot": "npm run start --prefix bot",
    "start:miniapp": "npm run start --prefix miniapp"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}

{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"],
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
